<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/game_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/score_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="false"
            android:layout_weight="1"
            android:textSize="44sp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/error_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="false"
            android:layout_weight="1"
            android:textSize="44sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn1d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_red_button"
                />

            <android.widget.Button
                android:id="@+id/btn2d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_blue_button"/>

            <android.widget.Button
                android:id="@+id/btn3d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_green_button"/>

            <android.widget.Button
                android:id="@+id/btn4d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_pink_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn1c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_red_button"
                />

            <android.widget.Button
                android:id="@+id/btn2c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_blue_button"/>

            <android.widget.Button
                android:id="@+id/btn3c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_green_button"/>

            <android.widget.Button
                android:id="@+id/btn4c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_pink_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn1b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_red_button"
                />

            <android.widget.Button
                android:id="@+id/btn2b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_blue_button"/>

            <android.widget.Button
                android:id="@+id/btn3b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_green_button"/>

            <android.widget.Button
                android:id="@+id/btn4b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_pink_button"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#FFFDD835"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn1a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_red_button"
                />

            <android.widget.Button
                android:id="@+id/btn2a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_blue_button"/>

            <android.widget.Button
                android:id="@+id/btn3a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_green_button"/>

            <android.widget.Button
                android:id="@+id/btn4a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:alpha="0.7"
                android:background="@drawable/custom_pink_button"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>